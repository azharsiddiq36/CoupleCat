<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.DetailActivity"
    android:layout_height="match_parent"
    android:background="@drawable/bg_overlay_splash">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/mainappbar"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@drawable/bg_overlay_splash"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/maincollapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="48dp"
            app:expandedTitleMarginStart="10dp"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="16dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivBg"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:riv_corner_radius="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_kucing_1"
                app:layout_collapseMode="parallax"
                />
            <TextView
                android:textColor="@color/whitePrimary"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="14dp"
                android:layout_gravity="end|bottom"
                android:text=""
                android:id="@+id/tvJudul"
                android:layout_width="wrap_content"
                android:fontFamily="@font/mmedium"
                android:textSize="30sp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/maintoolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="24dp"
                android:background="@drawable/bg_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                <TextView
                    android:text="Deskripsi"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    android:background="@drawable/bg_input_edit"/>
                <TextView
                    android:text="The Abyssinian is easy to care for, and a joy to have in your home. They’re affectionate cats and love both people and other animals."
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:textSize="14sp"
                    android:lineHeight="24dp"
                    android:id="@+id/tvDescription"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/bg_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                <TextView
                    android:text="Syarat dan Ketentuan"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    android:background="@drawable/bg_input_edit"/>
                <TextView
                    android:text="The Abyssinian is easy to care for, and a joy to have in your home. They’re affectionate cats and love both people and other animals."
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:textSize="14sp"
                    android:lineHeight="24dp"
                    android:id="@+id/tvDetails"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                <TextView
                    android:text="Informasi Lainnya"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    android:background="@drawable/bg_input_edit"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Penyelenggara"
                        android:layout_width="110dp"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Rp. "
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:id="@+id/tvNama"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Tanggal Mulai"
                        android:layout_width="110dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Rp. "
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:id="@+id/tvTglMulai"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Harga"
                        android:layout_width="110dp"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"

                        android:lineHeight="24dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Rp. "
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvHarga"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Sisa Tiket"
                        android:layout_width="110dp"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="7-10"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvSisa"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Nomor"
                        android:layout_width="110dp"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Egypt"
                        android:id="@+id/tvNomor"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/mregular"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:lineHeight="24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/bluePrimaryDark"
                    android:text="Kontes ini diadakan di Duri, Riau Indonesia"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/mregular"
                    android:textSize="10sp"
                    android:id="@+id/tvLokasi"
                    android:lineHeight="24dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/bg_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                <TextView
                    android:text="Lakukan Pemesanan"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:padding="8dp"
                        android:layout_width="50dp"
                        android:id="@+id/ivWhislist"
                        android:layout_height="50dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/bg_button"
                        android:src="@drawable/whislist" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>