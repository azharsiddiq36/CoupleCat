<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/lyInflater"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="15dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#F1F8E9">
                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_close_black_24dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/bg_overlay_splash"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="Rincian"
                        android:padding="15dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimaryDark">
                    </View>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/kucingFoto"
                        android:src="@mipmap/ic_launcher"/>

                    <TextView
                        android:id="@+id/tvNamaKucing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="Nama"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ras Kucing"
                        android:padding="5dp"
                        android:id="@+id/tvRas"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hari"
                        android:padding="5dp"
                        android:id="@+id/tvHari"
                        android:textAlignment="center"
                        android:layout_margin="3dp"
                        android:textSize="14dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimaryDark">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="Pemilik"
                        android:padding="5dp"

                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimaryDark">
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_weight="1"
                            android:layout_height="70dp"
                            android:scaleType="centerCrop"
                            android:id="@+id/ivPemilik"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Azhar Siddiq"
                            android:padding="10dp"
                            android:layout_margin="3dp"
                            android:id="@+id/tvPemilik"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="Lokasi"
                        android:padding="5dp"

                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimaryDark">
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lokasi"
                            android:padding="10dp"
                            android:layout_margin="3dp"
                            android:id="@+id/tvLocation"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="Aksi"
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimaryDark">
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_margin="2dp"
                            android:layout_weight="0.25"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_button"
                            android:id="@+id/ivMap"
                            android:padding="2dp"
                            android:src="@drawable/ic_place_black_24dp"/>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:layout_margin="2dp"
                            android:layout_weight="0.25"
                            android:id="@+id/ivDirection"
                            android:layout_height="50dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_button"
                            android:src="@drawable/ic_navigation_black_24dp"/>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:padding="2dp"
                            android:layout_width="50dp"
                            android:layout_weight="0.25"
                            android:layout_margin="2dp"
                            android:id="@+id/ivSchedule"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_button"
                            android:src="@drawable/ic_date_range_black_24dp"/>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:padding="2dp"
                            android:layout_width="50dp"
                            android:id="@+id/ivMessage"
                            android:layout_height="50dp"
                            android:layout_weight="0.25"
                            android:background="@drawable/bg_button"
                            android:src="@drawable/ic_chat_black_24dp" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/btnTutup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Tutup"
                        android:textSize="18dp"
                        android:background="@drawable/bg_button"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:textColor="#fff"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>