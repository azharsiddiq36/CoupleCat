<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CoupleFragment">
        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/mmedium"
                android:text="Temukan Pasangan Kucingmu"
                android:textAlignment="center"
                android:textColor="@color/bluePrimaryDark"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/lyFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/bg_info_location"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:text="Pekanbaru, Tampan"
                    android:textAlignment="center"
                    android:textColor="@color/whitePrimary"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lyFilter"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/lyOption"
                    android:background="@drawable/bg_white"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Provinsi"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Kabupaten"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="Kecamatan"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:width="75dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desa"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:width="75dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </Spinner>
                    </LinearLayout>
                    <Button
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnTerapkan"
                        android:text="Terapkan"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/mmedium"
                        android:background="@drawable/bg_button"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCouple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="24dp"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lyFilter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="24dp"
                android:id="@+id/lyBtnCircle"
                android:layout_marginBottom="70dp"
                android:background="@drawable/bg_circle_blue_primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/whitePrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    <!-- TODO: Update blank fragment layout -->
</FrameLayout>