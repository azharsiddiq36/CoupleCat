<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:id="@+id/lyContainer"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_weight="1"
            android:layout_width="130dp"
            android:scaleType="centerCrop"
            android:id="@+id/ivPicture"
            app:riv_corner_radius="15dp"
            android:layout_height="170dp"
            android:src="@drawable/bg_kucing_1" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@drawable/bg_input_edit"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/tvCountry"
                android:text="Indonesia"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:fontFamily="@font/mregular"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvName"
                android:text="Abysinian"
                android:layout_width="wrap_content"
                android:fontFamily="@font/mregular"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
            <View
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bluePrimaryDark"/>
            <TextView
                android:id="@+id/tvDescription"
                android:text="Active, Energetic, Independent, Inteligend, gentle"
                android:layout_width="match_parent"
                android:fontFamily="@font/mregular"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <View
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bluePrimaryDark"/>
            <TextView
                android:layout_gravity="end|bottom"
                android:text="Selengkapnya"
                android:layout_width="wrap_content"
                android:fontFamily="@font/mregular"
                android:textSize="13sp"
                android:textColor="@color/bluePrimaryDark"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>