<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_gray"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyContainer"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="15dp"
            android:id="@+id/ivFoto"
            android:layout_height="50dp"
            android:src="@drawable/bg_kucing_1" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="70dp">
            <TextView
                android:text="Azhar Siddiq"
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:fontFamily="@font/mmedium"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/mregular"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:id="@+id/tvKoment"
                android:layout_height="wrap_content"
                android:text="aksjdlaskjdlaskdja;sdkjas;lkdjaslk;djas;lkdjas;ldkjas;ldjkas;ldkajs;dkajsd;lkasjd;al"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvTime"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 jam yang lalu"/>
</LinearLayout>

