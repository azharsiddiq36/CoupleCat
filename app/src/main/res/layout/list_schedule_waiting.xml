<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="@drawable/bg_input_edit"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_weight="1"
                android:layout_width="80dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="15dp"
                android:layout_height="80dp"
                android:src="@drawable/bg_kucing_1" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="80dp">
                <TextView
                    android:text="Azhar Siddiq"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:text="Hal : Perkawinan Putiah dan Tamrin"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/mregular"
                    android:textSize="10sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:fontFamily="@font/mregular"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTanggal"
            android:textSize="10sp"
            android:text="Diajukan pada 29 Februari 2020"/>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="20dp">
            <Button
                android:textColor="#fff"
                android:fontFamily="@font/mregular"
                android:text="Tolak"
                android:id="@+id/btnTolak"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.3"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/bg_button_tolak"/>
            <Button
                android:layout_weight="0.3"
                android:textColor="#fff"
                android:fontFamily="@font/mregular"
                android:text="Detail"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/bg_button_cancel"/>
            <Button
                android:layout_marginStart="10dp"
                android:layout_weight="0.3"
                android:textColor="#fff"
                android:fontFamily="@font/mregular"
                android:text="Setuju"
                android:id="@+id/btnSetuju"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/bg_button"/>
        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>